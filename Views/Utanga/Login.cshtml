@model Exame_Online.ModelsView.UsuarioModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">

    <!-- Title -->
    <title>@ViewData["Title"] | Universidade Técnica de Angola</title>

    <!-- Favicon -->
    <link href="~/assets/img/photos/Utang.jfif" rel="icon" type="image/png">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,600,700,800" rel="stylesheet">

    <!-- Icons -->
    <link href="~/assets/css/icons.css" rel="stylesheet">

    <!--Bootstrap.min css-->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">

    <script src="~/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- Ansta CSS -->
    <link href="~/assets/css/dashboard.css" rel="stylesheet" type="text/css">

    <!-- Single-page CSS -->
    <link href="~/assets/plugins/single-page/css/main.css" rel="stylesheet" type="text/css">

</head>

<body class="bg-gradient">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-5">
                @*---------- Iniciao da Div de notificação-----------------*@
                <div class="alert alert-danger mb-0 text-white text-center" style="padding:10px;" role="alert" asp-validation-summary="ModelOnly">
                    <span class="alert-inner--icon"><i class="fe fe-slash"></i></span>
                    <span class="alert-inner--text"><strong>Alerta!</strong> !</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form class="login100-form validate-form" asp-controller="Utanga" asp-action="Login" autocomplete="off">
                    <span class="login100-form-title">
                        <img width="40" height="40" src="~/assets/img/photos/Utang.jfif" class="rounded-circle" alt="">
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Email válido Ex: ex@abc.xyz">
                        <input class="input100" type="text" asp-for="Email" name="email" placeholder="Usuário">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Email" class="error_form"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Senhao obrigatória">
                        <input class="input100" type="password" asp-for="Password" name="Password" placeholder="Senha">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Password" class="error_form"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center pt-2">
                        <span class="txt1">
                            Esqueceu
                        </span>
                        <a class="txt2" href="forgot.html">
                            Nome de Usuario / Senha?
                        </a>
                    </div>

                    <div class="text-center pt-1">
                        <a class="txt2" asp-action="Online" asp-controller="Inscricao">
                            Inscrever-Se
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Ansta Scripts -->
    <!-- Core -->


</body>

</html>