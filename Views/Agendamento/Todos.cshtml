                        break
                    case "2":
                        mensagem = "Já há uma turma Cadastrada!!";
                        EsconderAlerta();
                        error_message.innerHTML = mensagem;
                        ExibirAlerta();
                        break
                    case "3":
                        break
                    default:
                        break

                }

            }
        })
    };

