        if (val == false) {
            return false;
        }

        var model = {
            Id_Curso: Curso,
            Id_Disciplina: Disciplina,
            Horario: Horas,
            Dt_Realizacao: dataAv,
            Dt_expirar: dataEx,
            Estado: Estado,
            Id_SalaExame: Sala

        }

        $.ajax({
            url: "/Agendamento/Cadastrar",
            type: "Post",
            dataType: "json",
            data: model,
            success: function (resultado) {
                debugger
                switch (resultado) {
                    case "1":
                        toastr.success("Agendamento Cadastrado com sucesso!!!", "Agendamento!!");
