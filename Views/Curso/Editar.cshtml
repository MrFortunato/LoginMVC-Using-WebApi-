@model Exame_Online.Models.CursoAddModel
@{
    ViewData["Title"] = "Editar Curso";
    Layout = "~/Views/Shared/Layout.cshtml";
}
    <script type="text/javascript">
    $(function () {
        var msg = '@ViewData["result"]';
        if (msg == '1')
        {
            toastr.success("Editado com sucesso!!!", "Curso!!");
            window.setTimeout(function () {
                //Direcionar para lista dos Curso!! depois da autualização
                window.location.href = "@Url.Action("Lista", "Curso")";
            }, 450);
        }
    });
    </script>
<div class="page-header mt-0 shadow p-3">
    <ol class="breadcrumb mb-sm-0">
        <li class="breadcrumb-item"><a asp-action="Lista" asp-controller="Curso">Listar</a></li>
        <li class="breadcrumb-item active" aria-current="page">Editar</li>
    </ol>
</div>
<div class="container">
    <div class="wapper-disciplina">
        <div class="card shadow">
            <div class="card-header">
                <h2 class="mb-0"><b>Editar</b> Curso</h2>
            </div>
            <div class="card-body">
                  
                    <form asp-action="Editar" asp-controller="Curso" method="post" autocomplete="off">                      
                        <div class="form-row">
                            @*---------- Iniciao da Div de notificação-----------------*@
                            <div class="alert alert-danger mb-0 text-white text-center" style="padding:10px;" role="alert" asp-validation-summary="ModelOnly">
                                <span class="alert-inner--icon"><i class="fe fe-slash"></i></span>
                                <span class="alert-inner--text"><strong>Alerta!</strong> !</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            @*---------- Fim da Div de notificação-----------------*@
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input hidden asp-for="Id_Curso" class="form-control"/>
                                    <label asp-for="Nome_Curso"></label>
                                    <input asp-for="Nome_Curso" class="form-control" id="txtCurso" />
                                    <span asp-validation-for="Nome_Curso" class="error_form"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label> Descrição Departamento</label>
                                    <select asp-for="Id_Departamento" class="form-control" id="Depart"
                                            asp-items="@ViewBag.Departamentos">
                                        <option value="">-- Selecione Departamento --</option>
                                    </select>
                                    <span asp-validation-for="Id_Departamento" class="error_form"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-save"></i> Editar</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
